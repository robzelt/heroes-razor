

<div id="modal" class="modal @(IsOpen ? "is-active" : null)" xclass="{ 'is-active': isOpen }">
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">Confirm</p>
		</header>
		<section class="modal-card-body">@Message</section>
		<footer class="modal-card-foot">
			<button onclick=@(() => OnNo()) class="button modal-no" click="onNo">No</button>
			<button onclick=@(() => OnYes()) class="button is-primary modal-yes" click="onYes">Yes</button>
		</footer>
	</div>
</div>

@functions {
	[Parameter] string Message { get; set; }
	[Parameter] bool IsOpen { get; set; }


	//[Parameter] Func<string, Task> OnSelect { get; set; }
	[Parameter] Action OnYes { get; set; }
	[Parameter] Action OnNo { get; set; }


}